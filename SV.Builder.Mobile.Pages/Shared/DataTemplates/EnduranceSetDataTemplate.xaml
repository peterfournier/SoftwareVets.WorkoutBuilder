<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SV.Builder.Mobile.Views.Shared.EnduranceSetDataTemplate"
             xmlns:iconLabels="clr-namespace:SV.Builder.Mobile.Views.Labels.IconLabels"
             >
    <Grid ColumnDefinitions="50,100">

        <Label Text="{Binding Name}"></Label>

        <StackLayout Grid.Column="1" 
                     Orientation="Horizontal">
            <iconLabels:ClockLabel FontSize="Medium"></iconLabels:ClockLabel>

            <Label>
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="{Binding Duration}"></Span>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </StackLayout>
    </Grid>
</ContentView>