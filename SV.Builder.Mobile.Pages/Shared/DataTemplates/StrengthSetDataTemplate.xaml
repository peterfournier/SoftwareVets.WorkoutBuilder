<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SV.Builder.Mobile.Views.Shared.StrengthSetDataTemplate"
             xmlns:domainModel="clr-namespace:SV.Builder.Domain;assembly=SV.Builder.Domain"
             >
             <!--x:DataType="domainModel:IWeightedSet"-->
    <Grid ColumnDefinitions="50,100,100">
        <Label Text="{Binding Name}"></Label>
        
        <Label Grid.Column="1">
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="{Binding ExerciseSet.Reps}"></Span>
                    <Span Text="x"></Span>
                </FormattedString>
            </Label.FormattedText>
        </Label>
        
        <Label Grid.Column="2">
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="Weight: "></Span>
                    <Span Text="{Binding ExerciseSet.Weight}"></Span>
                </FormattedString>
            </Label.FormattedText>
        </Label>
    </Grid>
</ContentView>