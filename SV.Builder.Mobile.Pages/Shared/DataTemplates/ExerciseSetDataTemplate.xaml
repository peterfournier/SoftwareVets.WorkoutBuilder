<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SV.Builder.Mobile.Views.Shared.ExerciseSetDataTemplate"
             xmlns:domainModel="clr-namespace:SV.Builder.Domain;assembly=SV.Builder.Domain"
             >
             <!--x:DataType="domainModel:IEnduranceSet"-->
    <StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="{Binding Name}"></Label>
            
            <Label>
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="{Binding ExerciseSet.Reps}"></Span>
                        <Span Text="x"></Span>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </StackLayout>
    </StackLayout>
</ContentView>