<?xml version="1.0" encoding="utf-8" ?>
<local:SettingsPageXaml xmlns="http://xamarin.com/schemas/2014/forms"
                        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                        x:Class="SoftwareVets.WorkoutBuilder.Mobile.Views.Pages.SettingsPage"
                        xmlns:local="clr-namespace:SoftwareVets.WorkoutBuilder.Mobile.Views.Pages"
                        xmlns:viewModels="clr-namespace:SoftwareVets.WorkoutBuilder.Mobile.ViewModels.Pages;assembly=SoftwareVets.WorkoutBuilder.Mobile.ViewModels"
                        x:DataType="viewModels:SettingsPageViewModel"
                        >
    
    <StackLayout BackgroundColor="{DynamicResource BackgroundColorKey}">
        <Label Text="Settings page" 
               VerticalOptions="CenterAndExpand" 
               HorizontalOptions="CenterAndExpand" 
               TextColor="{DynamicResource TextColorKey}"
               />

        <Button Text="Light Mode"
                Command="{Binding OnLightModeCommand}"
                ></Button>
        
        <Button Text="Dark Mode"
                Command="{Binding OnDarkModeCommand}"
                ></Button>
    </StackLayout>
    
</local:SettingsPageXaml>